---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CountdownTimer from '../components/CountdownTimer.astro';
import Disciplines from '../components/sections/Disciplines.astro';
import Instructor from '../components/sections/Instructor.astro';
import PlansCrossFit from '../components/sections/PlansCrossFit.astro';
import Hero from '../components/sections/Hero.astro';
import Reviews from '../components/sections/Reviews.astro';
import FAQ from 'src/components/sections/FAQ.astro';
import Contact from 'src/components/sections/Contact.astro';
import Location from '../components/sections/Location.astro';
---
<BaseLayout title="Preta Fit Jacó | CrossFit · BJJ · Wellness" description="Entrenamientos de CrossFit, Brazilian Jiu-Jitsu, fuerza y bienestar en Jacó. Comunidad y metodología progresiva.">
  <Fragment slot="header"><Header /></Fragment>

  <!-- Use Hero component -->
  <Hero />

  <!-- ================= WOD WARRIORS PROMO FUNNEL ================= -->
  <section class="section event-promo-section">
    <div class="container">
      <div class="event-header">
        <div class="overline event-overline">EVENTO ESPECIAL</div>
        <h2 class="h2 event-title">WOD WARRIORS 2025</h2>
        <p class="small event-description">
          <strong>Competencia de CrossFit</strong> • Exhibición de BJJ • Música en vivo<br>
          <span class="event-date">5 de Septiembre, 7:00 PM • Preta Fit Jacó</span>
        </p>
      </div>
      
      <!-- CTA Button -->
      <div class="event-cta-wrapper">
        <a href="/wodwarriors" class="btn event-cta-btn">
          ✨ Ver Detalles del Evento ✨
        </a>
        <p class="small event-cta-note">
          Categorías Principiante e Intermedio
        </p>
      </div>
    </div>
  </section>

  <!-- Use Disciplines component -->
  <Disciplines />

  <!-- Use Instructor component -->
  <Instructor />

  <!-- Use PlansCrossFit component -->
  <PlansCrossFit />

  <!-- Use Reviews component -->
  <Reviews />

  <!-- Use Location component -->
  <Location />

  <!-- ================= FAQ ================= -->
  <FAQ />

  <Fragment slot="footer"><Footer /></Fragment>
</BaseLayout>

<!-- ================= LIGHTBOX ================= -->
<div id="lightbox" class="lightbox">
  <button id="lbClose" class="btn secondary lightbox-close">Cerrar</button>
  <!-- Lightbox image - kept as img tag since src is dynamically set by JavaScript -->
  <img id="lbImg" src="" alt="" class="lightbox-image">
</div>

