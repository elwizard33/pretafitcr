<script>
/* amenities tabs */
const amenBtns=[...document.querySelectorAll('.amen-item')];
const amenImgs=[...document.querySelectorAll('.amen-visual img')];
amenBtns.forEach(b=>b.addEventListener('click',()=>{
  amenBtns.forEach(x=>x.classList.remove('active')); b.classList.add('active');
  const key=b.dataset.amen; amenImgs.forEach(i=> i.classList.toggle('active', i.dataset.img===key));
}));

/* competitors filter */
const compNav=[...document.querySelectorAll('#competidores .cards-nav button')];
const compCards=[...document.querySelectorAll('#competitorCards .comp-card')];
compNav.forEach(btn=>btn.addEventListener('click',()=>{
  compNav.forEach(b=>b.classList.remove('active'));
  btn.classList.add('active');
  const key=btn.dataset.comp;
  compCards.forEach(c=>{
    if(key==='all' || c.dataset.group===key){
      c.style.display='block';
      c.classList.add('highlight-pulse');
      setTimeout(()=>c.classList.remove('highlight-pulse'),800);
    } else {
      c.style.display='none';
    }
  });
});

/* gallery & rules lightbox */
const lb=document.getElementById('lightbox'), lbImg=document.getElementById('lbImg');
if(lb && lbImg) {
  document.getElementById('gallery')?.addEventListener('click',e=>{ if(e.target.tagName==='IMG'){ lbImg.src=e.target.src; lb.style.display='grid'; }});
  document.querySelectorAll('.rule-item').forEach(item=> item.addEventListener('click',()=>{ const full=item.getAttribute('data-full'); if(full){ lbImg.src=full; lb.style.display='grid'; }}));
  document.getElementById('lbClose')?.addEventListener('click',()=> lb.style.display='none');
  lb.addEventListener('click',e=>{ if(e.target===lb) lb.style.display='none'; });
  document.addEventListener('keydown',e=>{ if(e.key==='Escape') lb.style.display='none'; });
}

/* expanded form validation */
const regForm=document.getElementById('lead-form');
if(regForm){
  const success=document.getElementById('form-success');
  const error=document.getElementById('form-error');
  regForm.addEventListener('submit',e=>{
    e.preventDefault();
    success.style.display='none'; error.style.display='none';
    let valid=true;
    regForm.querySelectorAll('[required]').forEach(f=>{ f.classList.remove('invalid'); if(!f.value || (f.type==='checkbox' && !f.checked)){ valid=false; f.classList.add('invalid'); }});
    if(!valid){ error.style.display='block'; return; }
    success.style.display='block'; regForm.reset();
  });
}
</script>
