---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---
<BaseLayout title="WOD Warriors | Evento" description="Competencia CrossFit principiantes e intermedios con exhibición BJJ en Jacó.">
  <Fragment slot="header"><Header /></Fragment>
  <section class="hero" id="hero" aria-labelledby="hero-title">
    <div class="container hero-inner">
      <div class="tag" style="margin-bottom:var(--space-3);">5 Sept 2025 · 7:00 PM</div>
      <h1 id="hero-title" class="hero-title" data-animate>WOD <span class="accent-gradient-text">Warriors</span><br/>Competencia & Comunidad</h1>
      <p class="hero-lead" data-animate>Atletas principiantes e intermedios · Exhibición BJJ · Música · Food Trucks · Sponsors locales.</p>
      <div class="hero-actions" data-animate>
        <a href="#registro" class="btn">Registrar</a>
  <a href="#registro" class="btn btn--outline">Asistir</a>
      </div>
    </div>
  </section>
  <!-- Full event details condensed referencing static page design -->
  <section id="info" aria-labelledby="info-title">
    <div class="container">
      <div class="section-header" data-animate>
        <h2 id="info-title">Detalles Generales</h2>
        <p>Competencia enfocada en progreso técnico y ambiente formativo.</p>
      </div>
      <div class="services-grid">
        <div class="card" data-animate><h3>Categorías</h3><p>Principiante & Intermedio con estándares claros y seguros.</p></div>
        <div class="card" data-animate><h3>Exhibición BJJ</h3><p>Por Vanessa Vargas, cinta negra y campeona internacional.</p></div>
        <div class="card" data-animate><h3>Experiencia</h3><p>Música, sponsors, networking y comunidad.</p></div>
        <div class="card" data-animate><h3>Objetivo</h3><p>Impulsar nuevos atletas y fortalecer la región.</p></div>
      </div>
    </div>
  </section>
  <section id="categorias" aria-labelledby="cat-title">
    <div class="container">
      <div class="section-header" data-animate><h2 id="cat-title">Categorías</h2><p>Diseñadas para desafiar tu nivel actual.</p></div>
      <div class="services-grid">
        <div class="card" data-animate><h3>Principiante</h3><p>Movimientos básicos, cargas moderadas, técnica.</p></div>
        <div class="card" data-animate><h3>Intermedio</h3><p>Mayor densidad, combinaciones y habilidades selectas.</p></div>
      </div>
    </div>
  </section>
  <section id="registro" aria-labelledby="reg-title">
    <div class="container">
      <div class="section-header" data-animate><h2 id="reg-title">Registro rápido</h2><p>Deja tus datos para competir o asistir.</p></div>
      <form id="lead-form" novalidate data-animate style="max-width:560px;margin:0 auto;">
        <label for="name">Nombre</label><input id="name" name="name" required />
        <label for="email">Email</label><input id="email" name="email" type="email" required />
        <label for="role">Interés</label>
        <select id="role" name="role" required>
          <option value="">Selecciona</option>
          <option value="atleta">Competir</option>
          <option value="espectador">Asistir</option>
          <option value="patrocinador">Patrocinar</option>
        </select>
        <button class="btn" type="submit">Enviar</button>
      </form>
    </div>
  </section>
  <Fragment slot="footer"><Footer /></Fragment>
</BaseLayout>
