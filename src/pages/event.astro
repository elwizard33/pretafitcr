---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---
<BaseLayout title="WOD Warriors | Evento" description="WOD Warriors: Competencia de CrossFit (Principiante & Intermedio), exhibición BJJ, música y sponsors en Jacó.">
  <Fragment slot="header"><Header /></Fragment>
  
  <!-- ================= HERO ================= -->
  <section class="hero">
    <div class="container hero-card">
      <div class="hero-media card">
        <img alt="Logo WOD Warriors" src="/images/logo-wodwarriors.jpeg">
        <div class="hero-overlay">
          <div class="hero-bubble">
            <div class="h1">WOD WARRIORS<br>COMPETENCIA & COMUNIDAD</div>
            <div class="subtle">Competencia de CrossFit (principiante & intermedio) con exhibición de BJJ por <b>Vanessa Vargas</b> (2ª cinta negra del país), música en vivo, food trucks y patrocinadores locales.</div>
            <div class="hero-actions">
              <a class="btn" href="#registro">Registrar Equipo</a>
              <a class="btn secondary" href="#registro">Soy Espectador</a>
            </div>
          </div>
        </div>
      </div>

      <!-- mini features -->
      <div class="feature-row">
        <div class="feature">
          <div class="badge-ico"><svg width="18" height="18" viewBox="0 0 24 24"><path fill="#ff6a2a" d="M12 2 2 7l10 5 10-5-10-5Z"/></svg></div>
          <div><b>2 Categorías</b></div>
        </div>
        <div class="feature">
          <div class="badge-ico"><svg width="18" height="18" viewBox="0 0 24 24"><path fill="#ff6a2a" d="M7 6h2v12H7V6zm4 3h2v9h-2V9zm4-5h2v14h-2V4z"/></svg></div>
          <div><b>10+ Atletas</b></div>
        </div>
        <div class="feature">
          <div class="badge-ico"><svg width="18" height="18" viewBox="0 0 24 24"><path fill="#ff6a2a" d="M12 17.3 5.8 20.6 7 13.8 2 8.8 8.9 8l3.1-6.3L15.1 8 22 8.8l-5 5 1.2 6.8z"/></svg></div>
          <div><b>Exhibición BJJ</b></div>
        </div>
        <div class="feature">
          <div class="badge-ico"><svg width="18" height="18" viewBox="0 0 24 24"><path fill="#ff6a2a" d="M12 3a6 6 0 0 0-6 6c0 6 6 12 6 12s6-6 6-12a6 6 0 0 0-6-6z"/></svg></div>
          <div><b>5 Sept 2025</b></div>
        </div>
      </div>

      <!-- event info -->
      <div class="logo-strip">
        <div class="box">5 Sept 2025</div>
        <div class="box">7:00 PM</div>
        <div class="box">Jacó</div>
        <div class="box">Costa Rica</div>
        <div class="box">Preta Fit</div>
        <div class="box">Gratis</div>
      </div>
    </div>
  </section>

  <!-- ================= BOXES PARTICIPANTES ================= -->
  <section id="boxes" class="section">
    <div class="container">
      <div class="overline">Boxes Participantes</div>
      <h2 class="h2">Aliados y Comunidad</h2>
      <div class="small" style="margin-bottom:10px">Boxes que aportan atletas y energía al evento.</div>
      <div class="boxes-grid" style="display:grid;gap:12px;grid-template-columns:repeat(auto-fit,minmax(220px,1fr))">
        <a class="card" style="padding:14px;display:grid;gap:6px;text-decoration:none" href="https://www.instagram.com/box_parrita/" target="_blank" rel="noopener">
          <div style="font-weight:800" class="ig">Box Parrita <span class="social-inline"><svg class="icon-ig" viewBox="0 0 24 24"><path d="M7 2C4.2 2 2 4.2 2 7v10c0 2.8 2.2 5 5 5h10c2.8 0 5-2.2 5-5V7c0-2.8-2.2-5-5-5H7zm0 2h10c1.7 0 3 1.3 3 3v10c0 1.7-1.3 3-3 3H7c-1.7 0-3-1.3-3-3V7c0-1.7 1.3-3 3-3zm11 1a1 1 0 100 2 1 1 0 000-2zM12 7a5 5 0 100 10 5 5 0 000-10z"/></svg></span></div>
          <div class="small">Atletas principiantes & intermedios</div>
          <div class="small" style="color:#ff6a2a">@box_parrita</div>
        </a>
        <a class="card" style="padding:14px;display:grid;gap:6px;text-decoration:none" href="https://www.instagram.com/dukurfit/" target="_blank" rel="noopener">
          <div style="font-weight:800" class="ig">DukurFit <span class="social-inline"><svg class="icon-ig" viewBox="0 0 24 24"><path d="M7 2C4.2 2 2 4.2 2 7v10c0 2.8 2.2 5 5 5h10c2.8 0 5-2.2 5-5V7c0-2.8-2.2-5-5-5H7zm0 2h10c1.7 0 3 1.3 3 3v10c0 1.7-1.3 3-3 3H7c-1.7 0-3-1.3-3-3V7c0-1.7 1.3-3 3-3zm11 1a1 1 0 100 2 1 1 0 000-2zM12 7a5 5 0 100 10 5 5 0 000-10z"/></svg></span></div>
          <div class="small">Fuerza & acondicionamiento</div>
          <div class="small" style="color:#ff6a2a">@dukurfit</div>
        </a>
        <a class="card" style="padding:14px;display:grid;gap:6px;text-decoration:none" href="https://www.instagram.com/pretafitjaco/" target="_blank" rel="noopener">
          <div style="font-weight:800" class="ig">Preta Fit Jacó <span class="social-inline"><svg class="icon-ig" viewBox="0 0 24 24"><path d="M7 2C4.2 2 2 4.2 2 7v10c0 2.8 2.2 5 5 5h10c2.8 0 5-2.2 5-5V7c0-2.8-2.2-5-5-5H7zm0 2h10c1.7 0 3 1.3 3 3v10c0 1.7-1.3 3-3 3H7c-1.7 0-3-1.3-3-3V7c0-1.7 1.3-3 3-3zm11 1a1 1 0 100 2 1 1 0 000-2zM12 7a5 5 0 100 10 5 5 0 000-10z"/></svg></span></div>
          <div class="small">Host del evento</div>
          <div class="small" style="color:#ff6a2a">@pretafitjaco</div>
        </a>
      </div>
    </div>
  </section>

  <!-- ================= ABOUT PRETA FIT (detailed cards to match static HTML content) ================= -->
  <section id="about" class="section">
    <div class="container">
      <div class="overline">Sobre Preta Fit</div>
      <h2 class="h2">Construyendo Fuerza, Técnica & Comunidad</h2>
      <div style="display:grid;gap:12px;grid-template-columns:repeat(auto-fit,minmax(240px,1fr));margin-top:12px">
        <article class="card" style="padding:14px">
          <h3 style="margin:0 0 6px;font-size:18px">Misión</h3>
          <p class="small" style="margin:0">Crear una comunidad de atletas que desarrollen fuerza física y mental. Entrenamiento funcional, enfoque técnico y cultura de apoyo mutuo.</p>
        </article>
        <article class="card" style="padding:14px">
          <h3 style="margin:0 0 6px;font-size:18px">Vanessa Vargas</h3>
          <p class="small" style="margin:0">Cinta negra, campeona internacional de BJJ, coach certificada CF-L2. 5 años como entrenadora transformando atletas con enfoque integral y precisión técnica.</p>
        </article>
        <article class="card" style="padding:14px">
          <h3 style="margin:0 0 6px;font-size:18px">Comunidad</h3>
          <p class="small" style="margin:0">Atletas de diferentes niveles creciendo juntos. Eventos, colaboraciones con boxes amigos y actividades para inspirar consistencia.</p>
        </article>
        <article class="card" style="padding:14px">
          <h3 style="margin:0 0 6px;font-size:18px">Metodología</h3>
          <p class="small" style="margin:0">Entrenamiento progresivo, fundamentos sólidos, movilidad, fuerza, acondicionamiento y mentalidad estratégica para competir y vivir mejor.</p>
        </article>
      </div>
    </div>
  </section>

  <!-- ================= CATEGORIES (add descriptive copy & bullet lists) ================= -->
  <section id="categories" class="section">
    <div class="container">
      <div class="overline">Competencia</div>
      <h2 class="h2">Categorías de Competencia</h2>
      <div class="small" style="margin-bottom:10px">Dos niveles diseñados para desafiar tu estado actual y permitir un crecimiento seguro y exigente.</div>
      <div style="display:grid;gap:14px;grid-template-columns:repeat(auto-fit,minmax(260px,1fr))">
        <article class="card" style="padding:14px">
          <h3 style="margin:0 0 6px;font-size:18px">Principiante</h3>
          <p class="small" style="margin:0 0 6px">Enfocado en atletas con fundamentos en desarrollo. Movimientos básicos, cargas moderadas, énfasis en técnica.</p>
          <ul style="margin:0;padding-left:18px;font-size:12px;color:#6b7280;line-height:1.4">
            <li>Movimientos funcionales escalados</li>
            <li>Enfoque en seguridad</li>
            <li>Ideal primeros eventos</li>
          </ul>
        </article>
        <article class="card" style="padding:14px">
          <h3 style="margin:0 0 6px;font-size:18px">Intermedio</h3>
          <p class="small" style="margin:0 0 6px">Atletas con consistencia técnica. Volumen y combinaciones más complejas para un reto competitivo real.</p>
          <ul style="margin:0;padding-left:18px;font-size:12px;color:#6b7280;line-height:1.4">
            <li>Mayor densidad de repeticiones</li>
            <li>Algunas habilidades gimnásticas</li>
            <li>Manejo eficiente de cargas</li>
          </ul>
        </article>
      </div>
    </div>
  </section>

  <!-- ================= COMPETITORS (add full static lists) ================= -->
  <section id="competidores" class="section">
    <div class="container">
      <div class="overline">Competidores</div>
      <h2 class="h2" style="font-size:30px">Atletas Registrados</h2>
      <div class="small" style="margin-bottom:16px;font-size:14px">Atletas representando a Preta Fit, Box Parrita, DukurFit y otros independientes.</div>
      <div class="cards-nav" role="tablist" aria-label="Filtrar categorías de competidores">
        <button class="active" data-comp="all" role="tab">Todos</button>
        <button data-comp="pf" role="tab">Principiante F</button>
        <button data-comp="pm" role="tab">Principiante M</button>
        <button data-comp="if" role="tab">Intermedio F</button>
        <button data-comp="im" role="tab">Intermedio M</button>
      </div>
      <div id="competitorCards" style="display:grid;gap:14px">
        <div class="card comp-card" data-group="pf" style="padding:18px">
          <h3 style="margin:0 0 10px;font-size:16px;letter-spacing:.18em;text-transform:uppercase;color:#ff6a2a">Principiante Femenino</h3>
          <ul style="margin:0;padding-left:20px;font-size:13px;columns:2 180px;line-height:1.5">
            <li><strong>Shirley</strong> <span class="small">(Parrita)</span></li>
            <li><strong>Stella</strong> <span class="small">(Preta Fit)</span></li>
            <li><strong>Mariana</strong> <span class="small">(Preta Fit)</span></li>
          </ul>
        </div>
        <div class="card comp-card" data-group="pm" style="padding:18px">
          <h3 style="margin:0 0 10px;font-size:16px;letter-spacing:.18em;text-transform:uppercase;color:#ff6a2a">Principiante Masculino</h3>
          <ul style="margin:0;padding-left:20px;font-size:13px;columns:2 180px;line-height:1.5">
            <li><strong>Jostin</strong> <span class="small">(Parrita)</span></li>
            <li><strong>Gabriel</strong> <span class="small">(Preta Fit)</span></li>
            <li><strong>Will</strong> <span class="small">(Preta Fit)</span></li>
          </ul>
        </div>
        <div class="card comp-card" data-group="if" style="padding:18px">
          <h3 style="margin:0 0 10px;font-size:16px;letter-spacing:.18em;text-transform:uppercase;color:#ff6a2a">Intermedio Femenino</h3>
          <ul style="margin:0;padding-left:20px;font-size:13px;columns:2 180px;line-height:1.5">
            <li><strong>Sol</strong></li>
            <li><strong>Sharet</strong></li>
            <li><strong>Serena</strong></li>
            <li><strong>Amanda</strong> <span class="small">(Preta Fit)</span></li>
            <li><strong>Alison</strong> <span class="small">(Box Parrita)</span></li>
            <li><strong>Mariam</strong> <span class="small">(Independiente)</span></li>
            <li><strong>Fabiola</strong> <span class="small">(DukurFit)</span></li>
          </ul>
        </div>
        <div class="card comp-card" data-group="im" style="padding:18px">
          <h3 style="margin:0 0 10px;font-size:16px;letter-spacing:.18em;text-transform:uppercase;color:#ff6a2a">Intermedio Masculino</h3>
          <ul style="margin:0;padding-left:20px;font-size:13px;columns:2 180px;line-height:1.5">
            <li><strong>Josue</strong> <span class="small">(Preta Fit)</span></li>
            <li><strong>Anderson</strong> <span class="small">(Box Parrita)</span></li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- ================= EXHIBITION ================= -->
  <section id="exhibicion" class="section">
    <div class="container">
      <div class="overline">Exhibición</div>
      <h2 class="h2">Brazilian Jiu-Jitsu</h2>

      <div class="pricing">
        <div class="card price">
          <h3 class="h3" style="margin:0 0 6px;font-weight:800">Vanessa Vargas</h3>
          <div class="amount">BJJ <span class="small">/ Cinta Negra</span></div>
          <ul>
            <li><span class="check"><svg viewBox="0 0 24 24"><path d="M20.3 5.7 9 17 3.7 11.7 5.1 10.3 9 14.2 18.9 4.3z"/></svg></span> Campeona Internacional</li>
            <li><span class="check"><svg viewBox="0 0 24 24"><path d="M20.3 5.7 9 17 3.7 11.7 5.1 10.3 9 14.2 18.9 4.3z"/></svg></span> Coach CF-L2 Certificada</li>
            <li><span class="check"><svg viewBox="0 0 24 24"><path d="M20.3 5.7 9 17 3.7 11.7 5.1 10.3 9 14.2 18.9 4.3z"/></svg></span> 5 años de experiencia</li>
          </ul>
          <a class="btn" href="#registro" style="width:100%">Ver Exhibición</a>
        </div>

        <div class="card price pop">
          <div class="pill" style="position:absolute;right:12px;top:12px;background:#fff6ed;border-color:#ffd9c8">Destacado</div>
          <h3 class="h3" style="margin:0 0 6px;font-weight:800">Demostración Técnica</h3>
          <div class="amount">20:00 <span class="small">/ hrs</span></div>
          <ul>
            <li><span class="check"><svg viewBox="0 0 24 24"><path d="M20.3 5.7 9 17 3.7 11.7 5.1 10.3 9 14.2 18.9 4.3z"/></svg></span> Control y fluidez</li>
            <li><span class="check"><svg viewBox="0 0 24 24"><path d="M20.3 5.7 9 17 3.7 11.7 5.1 10.3 9 14.2 18.9 4.3z"/></svg></span> Transiciones estratégicas</li>
            <li><span class="check"><svg viewBox="0 0 24 24"><path d="M20.3 5.7 9 17 3.7 11.7 5.1 10.3 9 14.2 18.9 4.3z"/></svg></span> Filosofía de longevidad</li>
          </ul>
          <a class="btn" href="#registro" style="width:100%">Asistir</a>
        </div>

        <div class="card price">
          <h3 class="h3" style="margin:0 0 6px;font-weight:800">Inspiración</h3>
          <div class="amount">Gratis <span class="small">/ evento</span></div>
          <ul>
            <li><span class="check"><svg viewBox="0 0 24 24"><path d="M20.3 5.7 9 17 3.7 11.7 5.1 10.3 9 14.2 18.9 4.3z"/></svg></span> Técnica sobre fuerza</li>
            <li><span class="check"><svg viewBox="0 0 24 24"><path d="M20.3 5.7 9 17 3.7 11.7 5.1 10.3 9 14.2 18.9 4.3z"/></svg></span> Principios de defensa</li>
            <li><span class="check"><svg viewBox="0 0 24 24"><path d="M20.3 5.7 9 17 3.7 11.7 5.1 10.3 9 14.2 18.9 4.3z"/></svg></span> Movilidad aplicada</li>
          </ul>
          <a class="btn" href="#registro" style="width:100%">Participar</a>
        </div>
      </div>
    </div>
  </section>

  <!-- ================= FAQ ================= -->
  <section id="faq" class="section">
    <div class="container" style="text-align:center">
      <div class="overline">FAQ</div>
      <h2 class="h2" style="margin-bottom:6px">¿Tienes preguntas?<br>Tenemos respuestas</h2>
      <div class="faq-wrap">
        <details class="faq"><summary>¿Puedo inscribirme si es mi primera competencia? <span class="small">⟶</span></summary><p>Sí. La categoría Principiante está diseñada para introducirte de forma segura y motivante al formato competitivo.</p></details>
        <details class="faq"><summary>¿Habrá opción de escalar movimientos? <span class="small">⟶</span></summary><p>Los WOD están diseñados para cada categoría. Principiante ya incluye estándares accesibles; Intermedio mantiene ciertas demandas técnicas.</p></details>
        <details class="faq"><summary>¿Cómo recibo confirmación? <span class="small">⟶</span></summary><p>Tras enviar el formulario, un miembro del equipo te contactará por email o WhatsApp para completar detalles.</p></details>
        <details class="faq"><summary>¿Qué debo llevar? <span class="small">⟶</span></summary><p>Ropa deportiva, hidratación, cuerda personal (si prefieres), vendas y buena actitud. Los sponsors cubrirán snacks y opciones saludables.</p></details>
      </div>
    </div>
  </section>

  <!-- ================= CTA BANNER ================= -->
  <section id="registro" class="section">
    <div class="container">
      <div class="card cta">
        <div class="left">
          <div class="overline">Una oportunidad para crecer</div>
          <h3 class="h2" style="margin:6px 0 6px">Regístrate para WOD Warriors o solicita información.</h3>
          <div class="small">Déjanos tu información y nuestro equipo te contactará para completar tu registro.</div>
          <form id="leadForm" class="mini-form" novalidate>
            <label class="sr" for="name">Nombre</label>
            <input id="name" name="name" placeholder="Nombre completo" required>
            <label class="sr" for="email">Email</label>
            <input id="email" name="email" type="email" placeholder="Correo electrónico" required>
            <label class="sr" for="phone">Teléfono</label>
            <input id="phone" name="phone" placeholder="Teléfono (opcional)">
            <button class="btn" type="submit">Registrarme</button>
          </form>
        </div>
        <div class="right">
          <img alt="Vanessa Vargas BJJ" src="/images/vanessa-vargas.jpeg">
        </div>
      </div>
    </div>
  </section>

  <!-- ================= SPONSORS ================= -->
  <section id="patrocinadores" class="section">
    <div class="container">
      <div class="overline">Patrocinadores</div>
      <h2 class="h2">Aliados que impulsan la experiencia</h2>
      <div class="small" style="margin-bottom:8px">Marcas locales que respaldan el crecimiento deportivo y la comunidad.</div>

      <div class="team">
        <div class="card member">
          <div class="thumb"><img src="/images/logo-holalola.jpeg" alt="Holaloha comida saludable"></div>
          <div class="info"><b>Holaloha</b><div class="small">Comida saludable</div></div>
        </div>
        <div class="card member">
          <div class="thumb"><img src="/images/logo-pretafit.jpeg" alt="Preta Fit snacks"></div>
          <div class="info"><b>Preta Fit</b><div class="small">Snacks • Host</div></div>
        </div>
        <div class="card member">
          <div class="thumb"><img src="/images/logo-jacolife.jpeg" alt="Jacó Life suplementos"></div>
          <div class="info"><b>Jacó Life</b><div class="small">Suplementos</div></div>
        </div>
        <div class="card member">
          <div class="thumb"><img src="/images/logo-farmacia-playa-hermosa.jpeg" alt="Farmacia Playa Hermosa salud"></div>
          <div class="info"><b>Farmacia PH</b><div class="small">Salud</div></div>
        </div>
        <div class="card member">
          <div class="thumb"><img src="/images/logo-marysol.jpeg" alt="Mar y Sol mantequillas"></div>
          <div class="info"><b>Mar y Sol</b><div class="small">Mantequillas</div></div>
        </div>
      </div>
    </div>
  </section>

  <!-- ================= RULES & STANDARDS (lightbox thumbnails) ================= -->
  <section id="reglas" class="section">
    <div class="container">
      <div class="overline">Reglas & Estándares</div>
      <h2 class="h2">Guía Visual por Categoría</h2>
      <div class="small" style="margin-bottom:8px">Consulta requerimientos, escalados, estándares de movimiento y penalizaciones.</div>
      <div class="rules-grid">
        <figure class="rule-item" data-full="/images/reglas-principiante.jpeg">
          <img src="/images/reglas-principiante.jpeg" alt="Reglas Principiante" />
          <figcaption class="small" style="text-align:center;margin-top:4px">Principiante</figcaption>
        </figure>
        <figure class="rule-item" data-full="/images/reglas-intermedio.jpeg">
          <img src="/images/reglas-intermedio.jpeg" alt="Reglas Intermedio" />
          <figcaption class="small" style="text-align:center;margin-top:4px">Intermedio</figcaption>
        </figure>
      </div>
    </div>
  </section>

  <!-- Lightbox overlay for rules -->
  <div id="lightbox" style="display:none;position:fixed;inset:0;background:rgba(0,0,0,0.85);z-index:60;place-items:center">
    <button id="lbClose" class="btn secondary" style="position:absolute;top:18px;right:18px">Cerrar ✕</button>
    <img id="lbImg" src="" alt="Detalle reglas" style="max-width:min(960px,92vw);max-height:80vh;border-radius:14px;border:1px solid #fff" />
  </div>

  <!-- ================= AGENDA / TIMELINE ================= -->
  <section id="agenda" class="section">
    <div class="container">
      <div class="overline">Agenda</div>
      <h2 class="h2">Agenda del Evento</h2>
      <div class="small" style="margin-bottom:8px">Horarios tentativos sujetos a ajustes menores para optimizar el flujo de heats y exhibición.</div>
      <div class="timeline">
        <div class="time-block"><h3 style="margin:0;font-size:14px">18:15 - Registro & Check-In</h3><div class="small">Llegada de atletas / confirmación de datos</div></div>
        <div class="time-block"><h3 style="margin:0;font-size:14px">19:00 - Apertura & Briefing</h3><div class="small">Bienvenida, estándares y flujo de heats</div></div>
        <div class="time-block"><h3 style="margin:0;font-size:14px">19:15 - WOD 1</h3><div class="small">Principiante & Intermedio (heats)</div></div>
        <div class="time-block"><h3 style="margin:0;font-size:14px">20:00 - Exhibición BJJ</h3><div class="small">Presentación Vanessa Vargas</div></div>
        <div class="time-block"><h3 style="margin:0;font-size:14px">20:30 - WOD 2</h3><div class="small">Formato contrarreloj</div></div>
        <div class="time-block"><h3 style="margin:0;font-size:14px">21:15 - Premiación & Cierre</h3><div class="small">Reconocimientos & networking</div></div>
      </div>
    </div>
  </section>

  <!-- ================= REGISTRO & COMUNIDAD (expanded form) ================= -->
  <section id="registro" class="section">
