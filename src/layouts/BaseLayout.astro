---
interface Props { title?: string; description?: string; }
const { title = 'Preta Fit | CrossFit · BJJ · Comunidad', description = 'Box líder en Jacó con programas de CrossFit, Brazilian Jiu-Jitsu y Wellness.' } = Astro.props;
---
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/jpeg" href="https://raw.githubusercontent.com/jourlez/pretafitcr/main/LogoPretaFit.jpeg" />
    <link rel="preconnect" href="https://raw.githubusercontent.com" />
  <link rel="stylesheet" href="/pretafitcr/theme.css" />
    <style>
      main{padding-top:92px;} section{scroll-margin-top:96px;padding:var(--space-8) 0 var(--space-8);position:relative;} section:nth-of-type(even){background:linear-gradient(180deg,rgba(255,255,255,0.02),rgba(255,255,255,0));} .section-header{margin-bottom:var(--space-6);max-width:760px;} .section-header h2{margin:0 0 var(--space-3);font-size:clamp(1.9rem,3.5vw,2.6rem);} .section-header p{font-size:var(--font-size-md);color:var(--color-text-soft);} [data-animate]{opacity:0;transform:translateY(32px);transition:.6s cubic-bezier(.4,.0,.2,1);} [data-animate].in-view{opacity:1;transform:translateY(0);} .hero{min-height:90vh;display:flex;align-items:center;position:relative;padding:140px 0 var(--space-8);} .hero::before{content:"";position:absolute;inset:0;background:linear-gradient(120deg,rgba(255,106,0,.24),rgba(123,47,247,.15) 60%),url('https://raw.githubusercontent.com/jourlez/pretafitcr/main/PretaFitPared.jpeg') center/cover no-repeat;filter:brightness(.55) saturate(1.2);} .hero-inner{position:relative;z-index:2;max-width:780px;} .hero-title{font-size:var(--font-size-2xl);margin:0 0 var(--space-4);background:linear-gradient(90deg,#fff,#ccc);-webkit-background-clip:text;background-clip:text;color:transparent;} .hero-lead{font-size:var(--font-size-lg);color:var(--color-text-soft);max-width:54ch;} .hero-actions{display:flex;flex-wrap:wrap;gap:var(--space-3);margin-top:var(--space-5);} .card{padding:var(--space-5);border:1px solid var(--color-border);border-radius:var(--radius-lg);background:linear-gradient(140deg,#1b1e25,#121417);position:relative;overflow:hidden;} .card h3{margin-top:0;font-size:1.15rem;} .services-grid{display:grid;gap:var(--space-5);grid-template-columns:repeat(auto-fit,minmax(260px,1fr));} .coach-grid{display:grid;gap:var(--space-5);grid-template-columns:repeat(auto-fit,minmax(240px,1fr));} .coach{position:relative;border:1px solid var(--color-border);border-radius:var(--radius-md);overflow:hidden;background:#111;} .coach img{width:100%;height:260px;object-fit:cover;filter:saturate(1.1);} .coach-info{padding:var(--space-4);} .gallery-grid{display:grid;gap:var(--space-4);grid-template-columns:repeat(auto-fit,minmax(240px,1fr));} .gallery-item{position:relative;overflow:hidden;border-radius:var(--radius-md);aspect-ratio:4/3;background:#111;} .gallery-item img{width:100%;height:100%;object-fit:cover;transition:var(--transition-slow);} .gallery-item:hover img{transform:scale(1.08);filter:brightness(1.1) saturate(1.2);} .event-promo{display:grid;gap:var(--space-6);grid-template-columns:repeat(auto-fit,minmax(340px,1fr));align-items:center;} .faq{display:grid;gap:var(--space-4);} .faq-item{border:1px solid var(--color-border);border-radius:var(--radius-md);overflow:hidden;background:#171a20;} .faq-q{cursor:pointer;padding:var(--space-4) var(--space-5);display:flex;align-items:center;justify-content:space-between;gap:var(--space-4);} .faq-q h3{margin:0;font-size:.95rem;letter-spacing:.5px;} .faq-q span{font-size:1.3rem;transition:var(--transition-fast);} .faq-a{max-height:0;overflow:hidden;padding:0 var(--space-5);transition:max-height var(--transition-slow),padding var(--transition-fast);font-size:var(--font-size-sm);color:var(--color-text-soft);} .faq-item.open .faq-a{max-height:260px;padding:0 var(--space-5) var(--space-5);} .faq-item.open .faq-q span{transform:rotate(45deg);} form{display:grid;gap:var(--space-4);background:linear-gradient(150deg,#1d2129,#121417);padding:var(--space-6);border-radius:var(--radius-lg);border:1px solid var(--color-border);box-shadow:var(--shadow-sm);} input,textarea{padding:.9rem 1rem;border-radius:var(--radius-sm);border:1px solid var(--color-border);background:#0f1115;color:#fff;font-size:var(--font-size-sm);font-family:inherit;resize:vertical;min-height:54px;} input:focus,textarea:focus{outline:2px solid var(--color-primary);outline-offset:2px;} label{font-size:var(--font-size-xs);letter-spacing:1px;text-transform:uppercase;color:var(--color-text-soft);} .contact-grid{display:grid;gap:var(--space-6);grid-template-columns:repeat(auto-fit,minmax(340px,1fr));align-items:start;} @media (max-width:760px){.hero{padding-top:120px;} .hero-title{font-size:clamp(2rem,9vw,2.6rem);} }
    </style>
  </head>
  <body>
    <slot name="header" />
    <main>
      <slot />
    </main>
    <slot name="footer" />
    <script>
      // Header scroll & mobile nav
      const header=document.getElementById('site-header');
      const navToggle=document.querySelector('.nav-toggle');
      const navList=document.getElementById('nav-list');
      function onScroll(){window.scrollY>24?header.classList.add('scrolled'):header.classList.remove('scrolled');}
      window.addEventListener('scroll',onScroll);onScroll();
      navToggle&&navToggle.addEventListener('click',()=>{const ex=navToggle.getAttribute('aria-expanded')==='true';navToggle.setAttribute('aria-expanded',String(!ex));navList.classList.toggle('open');navToggle.textContent=navList.classList.contains('open')?'✕':'☰';});
      navList&&navList.addEventListener('click',e=>{if(e.target.tagName==='A'&&navList.classList.contains('open'))navToggle.click();});
      // Scroll reveal
      const animated=document.querySelectorAll('[data-animate]');
      const io=new IntersectionObserver(es=>es.forEach(en=>{if(en.isIntersecting){en.target.classList.add('in-view');io.unobserve(en.target);}}),{threshold:.15});
      animated.forEach(el=>io.observe(el));
      // FAQ
      document.querySelectorAll('.faq-q').forEach(btn=>btn.addEventListener('click',()=>btn.parentElement.classList.toggle('open')));
    </script>
  </body>
</html>
