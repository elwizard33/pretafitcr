---
import { Image } from 'astro:assets';

// Import the hero image for optimization
import pretafitPared from '../../../public/images/pretafit-pared.jpeg';
---

<!-- ================= HERO ================= -->
<section class="hero" role="banner">
  <div class="container hero-card">
    <div class="hero-media card">
      <Image
        src={pretafitPared}
        alt="Interior del gimnasio Preta Fit mostrando el área de entrenamiento de CrossFit y Brazilian Jiu-Jitsu con equipamiento profesional en Jacó, Costa Rica"
        width={800}
        height={600}
        format="webp"
        quality={85}
        loading="eager"
        decoding="sync"
        onerror="this.style.backgroundColor='#f3f4f6';this.style.display='flex';this.style.alignItems='center';this.style.justifyContent='center';this.innerHTML='<span style=color:#6b7280;font-size:14px>Imagen no disponible</span>'"
      />
      <div class="hero-overlay">
        <div class="hero-bubble">
          <h1 class="h1">PRETA FIT<br />FUERZA · TÉCNICA · COMUNIDAD</h1>
          <p class="subtle">
            Box líder en Jacó con CrossFit, Brazilian Jiu-Jitsu, fuerza y
            coaching integral para progreso real.
          </p>
        </div>
      </div>
    </div>

    <!-- mini features -->
    <div
      class="feature-row"
      role="complementary"
      aria-label="Características principales"
    >
      <div class="feature">
        <div class="badge-ico" aria-hidden="true">
          <svg width="18" height="18" viewBox="0 0 24 24"
            ><path fill="#ff6a2a" d="M12 2 2 7l10 5 10-5-10-5Z"></path></svg
          >
        </div>
        <div><strong>Coaches Expertos</strong></div>
      </div>
      <div class="feature">
        <div class="badge-ico" aria-hidden="true">
          <svg width="18" height="18" viewBox="0 0 24 24"
            ><path
              fill="#ff6a2a"
              d="M7 6h2v12H7V6zm4 3h2v9h-2V9zm4-5h2v14h-2V4z"></path></svg
          >
        </div>
        <div><strong>CrossFit & BJJ Únicos</strong></div>
      </div>
      <div class="feature">
        <div class="badge-ico" aria-hidden="true">
          <svg width="18" height="18" viewBox="0 0 24 24"
            ><path
              fill="#ff6a2a"
              d="M12 3a6 6 0 0 0-6 6c0 6 6 12 6 12s6-6 6-12a6 6 0 0 0-6-6z"
            ></path></svg
          >
        </div>
        <div><strong>Ambiente Inclusivo</strong></div>
      </div>
    </div>
  </div>
</section>
