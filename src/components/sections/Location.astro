---
// Async function to fetch location data for streaming optimization
async function fetchLocationData() {
  // Simulate potential async data fetching (e.g., API calls) for streaming
  await new Promise(resolve => setTimeout(resolve, 20));
  
  // Location coordinates for Preta Fit Jacó
  const latitude = 9.6230174;
  const longitude = -84.6392181;
  const locationName = "Preta Fit Jacó";
  const address = "Jacó, Puntarenas, Costa Rica";

  // Generate URLs for different map services
  const wazeUrl = `https://waze.com/ul?ll=${latitude},${longitude}&navigate=yes&zoom=17`;
  const appleMapsUrl = `https://maps.apple.com/?q=${latitude},${longitude}&ll=${latitude},${longitude}&z=16`;
  const googleDirectionsUrl = `https://www.google.com/maps/dir/?api=1&destination=${latitude},${longitude}`;

  // Embedded Google Maps iframe URL
  const embedMapUrl = `https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d989.5544743742842!2d-84.6398671708736!3d9.622187413828324!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8fa1c7fbc323b277%3A0x7c9d1d164ef378b5!2sPRETA%20FIT%20JACO!5e0!3m2!1sen!2scr!4v1725491234567!5m2!1sen!2scr`;
  
  return {
    latitude,
    longitude,
    locationName,
    address,
    wazeUrl,
    appleMapsUrl,
    googleDirectionsUrl,
    embedMapUrl
  };
}

// Await location data for streaming optimization
const locationData = await fetchLocationData();
const { 
  locationName, 
  address, 
  wazeUrl, 
  appleMapsUrl, 
  googleDirectionsUrl, 
  embedMapUrl 
} = locationData;
---

<section id="location" class="section" aria-labelledby="location-heading">
  <div class="container">
    <div class="text-center mb-8">
      <div class="overline">Ubicación</div>
      <h2 id="location-heading" class="h2">Encuéntranos en Jacó</h2>
      <p class="text-muted max-w-[600px] mx-auto">
        Estamos ubicados en el corazón de Jacó, fácil acceso y con estacionamiento disponible.
      </p>
    </div>

    <div class="grid grid-cols-2 gap-8 items-start max-md:grid-cols-1 max-md:gap-6">
      <!-- Map Container -->
      <div class="relative shadow-[0_4px_20px_rgba(0,0,0,0.1)] rounded-xl overflow-hidden">
        <div id="map-error-fallback" class="absolute inset-0 bg-card border border-line rounded-xl hidden items-center justify-center z-10">
          <div class="text-center p-8 max-w-[400px]">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none">
              <path d="M12 2C8.1 2 5 5.1 5 9c0 5.3 7 13 7 13s7-7.7 7-13c0-3.9-3.1-7-7-7Zm0 9.5c-1.4 0-2.5-1.1-2.5-2.5S10.6 6.5 12 6.5s2.5 1.1 2.5 2.5S13.4 11.5 12 11.5Z" fill="#9CA3AF"/>
            </svg>
            <h4 class="mt-4 mb-2 text-ink text-lg font-medium">Mapa no disponible</h4>
            <p class="mb-6 text-muted text-sm leading-relaxed">Estamos ubicados en el corazón de Jacó, Costa Rica. Utiliza las opciones de navegación abajo para encontrarnos.</p>
            <div class="bg-slate-50 border border-line rounded-lg p-4 text-left">
              <h5 class="mb-2 text-ink text-sm font-semibold">Direcciones:</h5>
              <p class="text-xs leading-normal text-muted">Nos encontramos en una ubicación céntrica y de fácil acceso en Jacó, Puntarenas. Contamos con estacionamiento disponible para nuestros clientes.</p>
            </div>
          </div>
        </div>
        <iframe
          id="location-map"
          src={embedMapUrl}
          width="100%"
          height="400"
          style="border:0; border-radius: 12px;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="Mapa de ubicación de Preta Fit Jacó"
          aria-label="Mapa interactivo mostrando la ubicación de Preta Fit en Jacó, Costa Rica"
          onerror="handleMapError()"
          onload="handleMapLoad()"
          class="max-md:h-[300px]">
        </iframe>
      </div>

      <!-- Location Info and Actions -->
      <div class="flex flex-col gap-4">
        <div class="bg-slate-50 border border-line rounded-xl p-6 shadow-[0_2px_10px_rgba(0,0,0,0.05)] max-md:p-4">
          <div class="flex items-start gap-4 mb-6 max-sm:flex-col max-sm:items-start">
            <div class="bg-orange-50 border border-orange-200 rounded-[10px] w-12 h-12 flex items-center justify-center flex-shrink-0 max-sm:self-start">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 2C8.1 2 5 5.1 5 9c0 5.3 7 13 7 13s7-7.7 7-13c0-3.9-3.1-7-7-7Zm0 9.5c-1.4 0-2.5-1.1-2.5-2.5S10.6 6.5 12 6.5s2.5 1.1 2.5 2.5S13.4 11.5 12 11.5Z" fill="var(--color-brand)"/>
              </svg>
            </div>
            <div>
              <h3 class="mb-1 text-xl font-bold text-ink">{locationName}</h3>
              <p class="text-muted text-sm">{address}</p>
            </div>
          </div>

          <!-- Navigation Buttons -->
          <div class="grid grid-cols-1 gap-3 mb-6" role="navigation" aria-label="Opciones de navegación">
            <a href={googleDirectionsUrl} target="_blank" rel="noopener" 
               class="flex items-center justify-center gap-2 py-3 px-4 bg-[#4285f4] text-white border border-[#4285f4] rounded-lg no-underline font-semibold text-sm transition-all duration-200 hover:bg-[#3367d6] hover:border-[#3367d6] hover:-translate-y-0.5" 
               aria-label="Abrir ubicación en Google Maps">
              <span>Google Maps</span>
            </a>
            
            <a href={wazeUrl} target="_blank" rel="noopener" 
               class="flex items-center justify-center gap-2 py-3 px-4 bg-[#33ccff] text-white border border-[#33ccff] rounded-lg no-underline font-semibold text-sm transition-all duration-200 hover:bg-[#00b8e6] hover:border-[#00b8e6] hover:-translate-y-0.5"
               aria-label="Abrir navegación en Waze">
              <span>Waze</span>
            </a>
            
            <a href={appleMapsUrl} target="_blank" rel="noopener" 
               class="flex items-center justify-center gap-2 py-3 px-4 bg-black text-white border border-black rounded-lg no-underline font-semibold text-sm transition-all duration-200 hover:bg-gray-800 hover:border-gray-800 hover:-translate-y-0.5"
               aria-label="Abrir ubicación en Apple Maps">
              <span>Apple Maps</span>
            </a>
          </div>

          <!-- Contact Info -->
          <div class="flex flex-col gap-3" role="complementary" aria-label="Información de contacto">
            <a href="tel:+50670092140" 
               class="flex items-center gap-3 py-3 px-3 bg-slate-100 border border-line rounded-lg no-underline text-ink font-semibold transition-all duration-200 hover:bg-orange-50 hover:border-orange-200 hover:-translate-y-0.5" 
               aria-label="Llamar al +506 7009-2140">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                <path d="M6.6 10.8c1.7 3.2 4.4 5.9 7.6 7.6l2.5-2.5c.3-.3.7-.4 1.1-.3 1.2.4 2.6.6 4 .6.6 0 1 .4 1 1V22c0 .6-.4 1-1 1C10.4 23 1 13.6 1 2c0-.6.4-1 1-1h4.8c.6 0 1 .4 1 1 0 1.4.2 2.8.6 4 .1.4 0 .8-.3 1.1l-2.5 2.7Z" fill="#34D399"/>
              </svg>
              <span>+506 7009-2140</span>
            </a>
            
            <a href="https://wa.me/50670092140" target="_blank" rel="noopener" 
               class="flex items-center gap-3 py-3 px-3 bg-slate-100 border border-line rounded-lg no-underline text-ink font-semibold transition-all duration-200 hover:bg-orange-50 hover:border-orange-200 hover:-translate-y-0.5"
               aria-label="Contactar por WhatsApp">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.464 3.487" fill="#25D366"/>
              </svg>
              <span>WhatsApp</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  function handleMapError() {
    console.warn('Map failed to load, showing fallback content');
    const iframe = document.getElementById('location-map');
    const fallback = document.getElementById('map-error-fallback');
    
    if (iframe && fallback) {
      iframe.style.display = 'none';
      fallback.style.display = 'flex';
    }
  }

  function handleMapLoad() {
    // Map loaded successfully, ensure fallback is hidden
    const fallback = document.getElementById('map-error-fallback');
    if (fallback) {
      fallback.style.display = 'none';
    }
  }

  // Set up error handling for network issues
  document.addEventListener('DOMContentLoaded', function() {
    const iframe = document.getElementById('location-map') as HTMLIFrameElement;
    if (iframe) {
      // Set a timeout to show fallback if map doesn't load within reasonable time
      const timeout = setTimeout(() => {
        try {
          if (!iframe.contentDocument && !iframe.contentWindow?.document) {
            console.warn('Map loading timeout, showing fallback');
            handleMapError();
          }
        } catch (error) {
          console.warn('Map access error, showing fallback:', error);
          handleMapError();
        }
      }, 10000); // 10 second timeout

      iframe.addEventListener('load', () => {
        clearTimeout(timeout);
        handleMapLoad();
      });

      iframe.addEventListener('error', () => {
        clearTimeout(timeout);
        handleMapError();
      });
    }
  });
</script>
